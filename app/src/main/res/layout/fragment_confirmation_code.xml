<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <import type="com.andrei.dataLayer.engine.repositories.AuthRepository.ConfirmationCodeResult"/>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.andrei.compassapp.viewModels.AuthViewModel" />
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.ConfirmationCode"
        android:background="@drawable/login_background">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="300dp"
                android:layout_height="330dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/round_background_fields"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/login_welcome_text"
                    style="@style/title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="@string/screen_confirmation_message"
                    android:textSize="30sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/screen_confirmation_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/screen_confirmation_confirm_message"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/login_welcome_text" />

                <EditText
                    android:id="@+id/screens_confirmation_code_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:ems="10"
                    android:inputType="number"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/screen_confirmation_text" />


                <TextView
                    android:id="@+id/screens_confirmation_code_error_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text = "@string/screens_confirmation_code_invalid_code"
                    android:visibility="@{viewModel.validationCodeState instanceof ConfirmationCodeResult.FailedConfirmation ? View.VISIBLE : View.INVISIBLE }"
                    app:layout_constraintStart_toStartOf="@+id/screens_confirmation_code_input"
                    app:layout_constraintTop_toBottomOf="@+id/screens_confirmation_code_input" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/screens_confirmation_code_finish_button"
                    style="@style/login_screen_button"
                    android:visibility="@{viewModel.validationCodeState instanceof ConfirmationCodeResult.Loading ? View.INVISIBLE : View.VISIBLE }"

                    android:layout_marginTop="16dp"
                    android:text="@string/screens_confirmation_code_finish_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/screens_confirmation_code_error_message" />

                <ProgressBar
                    android:id="@+id/screens_confirmation_code_spinner"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="@{viewModel.validationCodeState instanceof ConfirmationCodeResult.Loading ? View.VISIBLE : View.INVISIBLE }"
                    app:layout_constraintBottom_toBottomOf="@+id/screens_confirmation_code_finish_button"
                    app:layout_constraintEnd_toEndOf="@+id/screens_confirmation_code_finish_button"
                    app:layout_constraintStart_toStartOf="@+id/screens_confirmation_code_finish_button"
                    app:layout_constraintTop_toTopOf="@+id/screens_confirmation_code_finish_button" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/compass_logo"
                app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
                app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
                app:layout_constraintStart_toStartOf="@+id/constraintLayout"
                app:layout_constraintTop_toTopOf="@+id/constraintLayout" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout></layout>