<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/authentication_nav_graph"
    app:startDestination="@id/landingFragment">

    <fragment
        android:id="@+id/landingFragment"
        android:name="com.andrei.compassapp.fragments.LandingFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_landing" >
        <action
            android:id="@+id/action_landingFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_landingFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.andrei.compassapp.fragments.LoginFragment"
        android:label="LoginUsernameFragment" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/confirmationCodeFragment"
        android:name="com.andrei.compassapp.fragments.ConfirmationCodeFragment"
        android:label="ConfirmationCodeFragment" >
        <argument
            android:name="username"
            app:argType="string" />
    </fragment>
    <action android:id="@+id/action_global_confirmationCodeFragment" app:destination="@id/confirmationCodeFragment" />
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.andrei.compassapp.fragments.RegisterFragment"
        android:label="RegisterFragment" />
</navigation>